@model OnlinePrint.ViewModel.MembersLoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>登入 - 線上影印申請系統</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
        <link href="~/Content/Login/Login.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/Login/Login.js"></script>

        <!--font awesome v6.1.1 CDN-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />

        <!--JQ 3.6.0 CDN-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>

    <body>
        <main>
            <div class="wrapper">
                <div-- class="container">
                    <form class="needs-validation" id="login_Form" asp-controller="Home" asp-action="login" method="post" novalidate style="max-width: 32rem;">
                        <div class="loader">
                            <div class="bar"></div>
                        </div>

                        <div id="form_Content">
                            <h1 class="form-title" id="header_Login">登入</h1>

                            <div class="form-row" id="div_Login">
                                <div class="col-lg-12 mb-3">
                                    <label>帳號(Account)</label>
                                    @Html.TextBoxFor(model => model.account, new { @class = "form-control", required = "required", id = "account", placeholder = "請輸入Demo帳號"})
                                    <div class="invalid-feedback" id="invalidAccount">
                                        請輸入帳號！
                                    </div>
                                </div>

                                <div class="col-lg-12  mb-3">
                                    <label>密碼(Password)</label>
                                    @Html.PasswordFor(model => model.password, new { @class = "form-control", required = "required", id = "password", placeholder = "請輸入Demo密碼"})
                                    @Html.ValidationMessageFor(model => model.errMsg, "", new { id = "loginErrMsg" })
                                    <div class="invalid-feedback" id="invalidPwd">
                                        請輸入密碼！
                                    </div>
                                </div>
                            </div>

                            <div class="separator">展示模式登入身分</div>
                            <div class="form-content" style="margin-bottom: 25px; ">
                                <label for="order1" class="btn btn-outline-secondary btn_Identity form-check-label">
                                    <input class="form-check-input" type="radio" name="order_set" id="order1" required>一般身分
                                </label>
                                <label for="order2" class="btn btn-outline-secondary btn_Identity form-check-label">
                                    <input class="form-check-input" type="radio" name="order_set" id="order2" required>管理身分
                                </label>

                                <div class="invalid-feedback" id="invalidOrder">
                                    請點選登入身分！
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-lg-12 mb-3">
                                    <label>驗證碼(Captcha)</label>
                                    <img id="code" src="/Login/GetValidateCode/" />
                                    @Html.TextBoxFor(model => model.validationStr, new { @class = "form-control", required = "required", id = "validation", placeholder = "請輸入驗證碼", autocomplete = "off" })

                                    <p id="captcha_ErrInfo">@TempData["result"]</p>

                                    <div class="invalid-feedback" id="invalidCaptcha">
                                        請輸入驗證碼！
                                    </div>
                                </div>
                            </div>
                            <input class="btn btn-primary" type="submit" id="login" value="登入" />
                        </div>
                    </form>
                </div>
        </main>
    </body>
</html>