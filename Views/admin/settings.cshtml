@model OnlinePrint.Models.BulletinBoardModel
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>公佈欄內容設定 - 線上列印申請系統</title>
    <!--BS5 CDN-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/scripts/tinymce/tinymce.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/wvvscp94bcfl7q8mph5clsvjbjjv3bly6v4oyhtesgvn0x5a/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <link href="~/Content/Admin/Settings.css" rel="stylesheet" />
    <script src="~/Scripts/Admin/Settings.js"></script>
</head>

<body>
    <input type="hidden" id="hdnToken" value="@ViewBag.Token" />
    <div class="container" style="margin-top: 20px">
        @using (Html.BeginForm("Settings", "admin", FormMethod.Post))
        {
            <h2 style="margin-bottom: 10px"><b>公佈欄設定</b></h2>
            <p>將文字輸入至下方，輸入完畢後即可點選儲存設定來變更公告。</p>

            @Html.AntiForgeryToken()
            <div style="margin-bottom: 10px">
                @Html.TextAreaFor(model => model.updateHtmlContent)
            </div>

            <p style="text-align: right">
                <button type="submit" class="btn btn-primary" disabled>預覽公佈欄設定</button>
            </p>
        }

        <div class="modal fade" tabindex="-1" id="demoInfo" aria-hidden="true" aria-labelledby="exampleModalToggleLabel">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: bold">公佈欄內容設定 - 展示模式</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body" style="text-align: center" id="m_timeDate">
                        <div style="display: inline">
                            <p>公佈欄內容設定因配合推甄作品，故不開放更改權限！</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>  